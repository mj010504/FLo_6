<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/home_pannel_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_first_album_default"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/home_pannel_btn_mike_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_mike"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_ticket_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_ticket_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_ticket"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_btn_setting_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_setting_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/btn_main_setting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_pannel_title_tv"
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:text="포근하게 덮어주는 꿈의 목소리"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_btn_mike_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/home_pannel_btn_play_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_panel_play_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_title_tv"/>

        <ImageView
            android:id="@+id/home_panel_album_img_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_panel_song_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/home_panel_singer_tv"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_album_img_iv"/>

        <TextView
            android:id="@+id/home_panel_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
            app:layout_constraintTop_toBottomOf="@id/home_panel_song_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv"/>

        <ImageView
            android:id="@+id/home_panel_album_img1_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="65dp"
            android:src="@drawable/img_album_exp"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_panel_song_title1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@id/home_panel_singer1_tv"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img1_iv"
            app:layout_constraintTop_toTopOf="@id/home_panel_album_img1_iv"/>

        <TextView
            android:id="@+id/home_panel_singer1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/home_panel_album_img1_iv"
            app:layout_constraintTop_toBottomOf="@id/home_panel_song_title1_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img1_iv"/>

        <TextView
            android:id="@+id/home_pannel_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 15곡 2019.11.11"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/home_panel_album_img1_iv"
            app:layout_constraintStart_toStartOf="@id/home_panel_album_img1_iv"/>

        <TextView
            android:id="@+id/home_pannel_today_music_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"/>

        <ImageView
            android:id="@+id/home_pannel_arrow_more_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_main_arrow_more"
            android:layout_marginStart="-5dp"
            app:layout_constraintStart_toEndOf="@id/home_pannel_today_music_tv"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_today_music_tv"/>

        <TextView
            android:id="@+id/home_pannel_overseas_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="해외"
            android:textColor="#612F2F32"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/home_pannel_domestic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="국내"
            android:textColor="#612F2F32"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_overseas_tv"
            />

        <TextView
            android:id="@+id/home_Synthesis_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="종합"
            android:textColor="#B52149DF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_background_iv"
            app:layout_constraintEnd_toStartOf="@id/home_pannel_domestic_tv"
            />

        <ImageView
            android:id="@+id/home_pannel_IU_album_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/iu_album"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_tv"
            app:layout_constraintStart_toStartOf="@id/home_pannel_today_music_tv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_playSong_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/widget_black_play"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_IU_album_iv"
            app:layout_constraintEnd_toEndOf="@id/home_pannel_IU_album_iv"/>

        <TextView
            android:id="@+id/Iu_LILAC_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LILAC"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/home_pannel_IU_album_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_IU_album_iv"/>

        <TextView
            android:id="@+id/IU_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textSize="20sp"
            android:textColor="#6F0D1112"
            app:layout_constraintStart_toStartOf="@id/home_pannel_IU_album_iv"
            app:layout_constraintTop_toBottomOf="@id/Iu_LILAC_tv"/>

        <ImageView
            android:id="@+id/home_pannel_IU_album1_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/iu_album"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_today_music_tv"
            app:layout_constraintStart_toEndOf="@id/home_pannel_IU_album_iv"/>

        <ImageView
            android:id="@+id/home_pannel_btn_playSong1_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/widget_black_play"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/home_pannel_IU_album1_iv"
            app:layout_constraintEnd_toEndOf="@id/home_pannel_IU_album1_iv"/>

        <TextView
            android:id="@+id/Iu_LILAC1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Celebrity"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/home_pannel_IU_album1_iv"
            app:layout_constraintTop_toBottomOf="@id/home_pannel_IU_album1_iv"/>

        <TextView
            android:id="@+id/IU1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유(IU)"
            android:textSize="20sp"
            android:textColor="#6F0D1112"
            app:layout_constraintStart_toStartOf="@id/home_pannel_IU_album1_iv"
            app:layout_constraintTop_toBottomOf="@id/Iu_LILAC1_tv"/>

        <ImageView
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/img_home_viewpager_exp"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/IU_tv" />

        <TextView
            android:id="@+id/PotCast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매일 들어도 좋은 팟캐스트"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewpager"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/potcast_img_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_potcast_exp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/PotCast_tv"
            app:layout_constraintTop_toBottomOf="@id/PotCast_tv" />

        <TextView
            android:id="@+id/potcast_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/potcast_img_iv"
            app:layout_constraintTop_toBottomOf="@id/potcast_img_iv"/>

        <TextView
            android:id="@+id/potcast_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textSize="20sp"
            android:textColor="#6F0D1112"
            app:layout_constraintStart_toStartOf="@id/potcast_img_iv"
            app:layout_constraintTop_toBottomOf="@id/potcast_title_tv"/>

        <ImageView
            android:id="@+id/potcast1_img_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_potcast_exp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/potcast_img_iv"
            app:layout_constraintTop_toBottomOf="@id/PotCast_tv" />

        <TextView
            android:id="@+id/potcast_title1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/potcast1_img_iv"
            app:layout_constraintTop_toBottomOf="@id/potcast1_img_iv"/>

        <TextView
            android:id="@+id/potcast_singer1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textSize="20sp"
            android:textColor="#6F0D1112"
            app:layout_constraintStart_toStartOf="@id/potcast1_img_iv"
            app:layout_constraintTop_toBottomOf="@id/potcast_title1_tv"/>

        <TextView
            android:id="@+id/video_collecton_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비디오 콜랙션"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/potcast_singer_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/video_iv"
            android:layout_width="330dp"
            android:layout_height="250dp"
            android:src="@drawable/img_video_exp"
            android:layout_marginTop="-25dp"
            app:layout_constraintTop_toBottomOf="@id/video_collecton_tv"
            app:layout_constraintStart_toStartOf="@id/video_collecton_tv"/>

        <TextView
            android:id="@+id/video_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="-20dp"
            app:layout_constraintStart_toStartOf="@id/video_collecton_tv"
            app:layout_constraintTop_toBottomOf="@id/video_iv"/>

        <TextView
            android:id="@+id/video_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가수"
            android:textSize="20sp"
            android:textColor="#6F0D1112"
            app:layout_constraintStart_toStartOf="@id/video_collecton_tv"
            app:layout_constraintTop_toBottomOf="@id/video_title_tv"/>

        <ImageView
            android:id="@+id/Flo_ad_iv"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitXY"
            android:src="@drawable/discovery_banner_aos"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/video_singer_tv" />

        <ImageView
            android:id="@+id/viewpager2_iv"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/img_home_viewpager_exp2"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/Flo_ad_iv" />

        <ImageView
            android:id="@+id/facebook_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_main_facebook"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewpager2_iv"
            app:layout_constraintStart_toStartOf="@id/viewpager2_iv"/>

        <ImageView
            android:id="@+id/instagram_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_main_instagram"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewpager2_iv"
            app:layout_constraintStart_toEndOf="@id/facebook_iv"/>

        <ImageView
            android:id="@+id/youtube.iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_main_youtube"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewpager2_iv"
            app:layout_constraintStart_toEndOf="@id/instagram_iv"/>

        <ImageView
            android:id="@+id/twiter_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_main_twitter"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/viewpager2_iv"
            app:layout_constraintStart_toEndOf="@id/youtube.iv"/>

        <TextView
            android:id="@+id/company_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(주)드림어스컴퍼니 사업자 정보"
            android:textSize="19sp"
            android:textColor="#92130909"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facebook_iv"
            app:layout_constraintStart_toStartOf="@id/facebook_iv" />

        <ImageView
            android:id="@+id/home_pannel_arrow_more1_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_main_arrow_more"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="@id/company_info_tv"
            app:layout_constraintStart_toEndOf="@id/company_info_tv"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>